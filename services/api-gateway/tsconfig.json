{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@saas/shared": [
        "../../shared/dist"
      ],
      "@saas/shared/*": [
        "../../shared/dist/*"
      ],
      "@/infrastructure/*": [
        "./src/infrastructure/*"
      ],
      "@/modules/*": [
        "./src/modules/*"
      ],
      "@/config/*": [
        "./src/config/*"
      ],
    }
  },
    "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}