{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@saas/shared/*": ["../../shared/*"],

      "@domain/*": ["src/domain/*"],
      "@application/*": ["src/application/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@modules/*": ["src/modules/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "references": [
    { "path": "../../shared" }
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}