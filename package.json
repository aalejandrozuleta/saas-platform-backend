{
  "name": "saas-platform",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "lint-staged": "lint-staged",
    "test": "pnpm -r test",
    "dev": "docker compose -f docker/docker-compose.dev.yml up --build",
    "test:watch": "pnpm -r test:watch",
    "test:cov": "pnpm -r test:cov",
    "dev:auth": "nest start auth-service --watch"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.7",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-boundaries": "^5.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prisma": "^7.3.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@nestjs/common": "11.1.13",
    "@nestjs/config": "3.2.3",
    "@nestjs/core": "11.1.13",
    "@nestjs/mongoose": "11.0.4",
    "@nestjs/platform-express": "11.1.13",
    "@prisma/client": "^7.3.0",
    "mongoose": "^9.1.5"
  },
  "pnpm": {
    "overrides": {
      "@nestjs/common": "11.1.13",
      "@nestjs/core": "11.1.13",
      "@nestjs/platform-express": "11.1.13",
      "@nestjs/config": "3.2.3",
      "@nestjs/mongoose": "11.0.4"
    },
    "ignoredBuiltDependencies": [
      "@nestjs/core",
      "@prisma/engines",
      "argon2",
      "prisma",
      "unrs-resolver"
    ]
  }
}
